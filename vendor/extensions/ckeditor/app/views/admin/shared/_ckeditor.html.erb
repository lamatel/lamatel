<%= javascript_include_tag '/ckeditor/ckeditor.js' %>
<script type="text/javascript">
window.onload = function()
{
  $('textarea').each(function(){
    CKEDITOR.replace(this.id, 
      {
        customConfig: '<%= javascript_path('/ckeditor/custom_config.js') %>',
        height: 350,
      });    
  })
}
</script>