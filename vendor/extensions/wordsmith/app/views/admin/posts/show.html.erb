
<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<p>
  <strong>Published At:</strong>
  <%=h @post.published_at %>
</p>
<p>
  <strong>Is Active:</strong>
  <%=h @post.is_active %>
</p>
<p>
  <strong>Permalink:</strong>
  <%=h @post.permalink %>
</p>

<p>
  <%= link_to "Edit", [:edit,:admin,@post] %> |
  <%= link_to "Destroy", [:admin, @post], :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", admin_posts_path %>
</p>
